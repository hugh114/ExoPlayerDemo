<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%">
    <shape
        android:shape="ring"
        android:thickness="2dp"
        android:useLevel="false">

        <gradient
            android:angle="90"
            android:startColor="@color/yt_color_transparent"
            android:endColor="@color/yt_color_yellow"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>